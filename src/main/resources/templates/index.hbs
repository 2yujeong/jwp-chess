{{>layout/header}}

<div class="chess-game-list">
    <div class="container">
        <div class="card">
            <div class="border to-left"></div>
            <div class="border to-bottom"></div>
            <div class="border to-right"></div>
            <div class="border to-top"></div>
            <div class="chess-game-list-title">
                체스게임 목록
                <input class="button is-primary is-light new-game-btn" type="button" value="새 게임">
            </div>

            <table class="chess-game-list-table">
                <tr>
                    <th class="chess-game-room-id">방 번호</th>
                    <th class="chess-game-room-title">방 제목</th>
                    <th class="chess-game-room-state">게임상태</th>
                    <!--                <th>방장이름</th>-->
                </tr>
                {{#chessGameDtos}}
                    <tr>
                        <td>{{chessGameId}}</td>
                        <td>{{title}}</td>
                        <!--            <td>로키</td>-->
                        <td>{{state}}</td>
                    </tr>
                {{/chessGameDtos}}
            </table>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/chessgames-list.js"></script>
{{>layout/footer}}
